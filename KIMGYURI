n = int()

def fun(a):
    x = 1
    for i in range(1, a+1):
        x = x * i
    if a >= 0 :
        print(a, "! =", x)

while True:
    if n >= 0:
        n = int(input("Enter a number:"))
        fun(n)
    elif n < -1:
        print("0과 양의 정수만 입력하시오.")
        n = int(input("Enter a number:"))
        fun(n)
    else:
        break
